<?xml version="1.0" encoding="UTF-8"?>

<schema name="ORFDocs" version="1.5">
    <types>
        <fieldType name="pathwayRunID" class="solr.StrField" indexed="true" stored="true" multiValued="false" required="true"/>
        <fieldType name="simple_number" class="solr.TrieIntField" indexed="true" stored="true"/>

    </types>

    <fields>
        <!--COG_stats_1+2 gene counts-->
        <field name="runID" type="pathwayRunID"/>
        <dynamicField name="*_cog1" type="simple_number" indexed="true" stored="true"/>
        <dynamicField name="*_cog2" type="simple_number" indexed="true" stored="true"/>

        <!--KEGG_stats_1+2 gene counts-->
        <dynamicField name="*_kegg1" type="simple_number" indexed="true" stored="true"/>
        <dynamicField name="*_kegg2" type="simple_number" indexed="true" stored="true"/>
    </fields>

    <uniqueKey>runID</uniqueKey>

    <solrQueryParser defaultOperator="AND"/>

</schema>
