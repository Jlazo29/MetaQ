# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.homePage

# Search genes
GET     /geneExplorer/:query        controllers.Application.geneExplorer(query: String)

# Search pathways
GET     /pwayExplorer/:query        controllers.Application.pwayExplorer(query: String)

# Search APIs
GET     /search                     controllers.Application.simpleSearch(query: String)

# get cluster data
GET     /cluster                    controllers.Application.clusterSearch(query: String)

#export data
GET     /export/:query              controllers.Application.exportData(query: String)

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file                controllers.Assets.at(path="/public", file)

GET  /images/loading.gif            controllers.Assets.at(path="/public", file="/images/loading.gif")

    
